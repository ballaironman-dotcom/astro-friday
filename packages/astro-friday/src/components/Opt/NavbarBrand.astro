---
import config from 'virtual:astro-friday-config'
import Logo from '../../assets/favicon.svg'
import { getPath } from '../../utils/path'

---

<a
  href={getPath('home')}
  class="hoverable-text size-2.5rem absolute"
  style={{
    'background-color': 'currentColor',
    '-webkit-mask': `url(${config?.logo?.url || Logo.src}) center / 100% no-repeat`,
    'mask': `url(${config?.logo?.url || Logo.src}) center / 100% no-repeat`,
  }}
/>
