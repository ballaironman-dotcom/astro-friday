---
import config from 'virtual:astro-friday-config'
import pkg from '../../package.json' assert { type: 'json' }
---

<footer class="copyright live-area mb-6 mt-10 flex flex-col sm:flex-row">
  <span class="text-sm op-50">
    <a
      target="_blank"
      href={config.copyright.license.url}
      style="color:inherit"
    >{config.copyright.license.type}</a>
    {config.copyright.copyrightYears} Â© {config.author.name}
  </span>
  <div class="flex-auto"></div>
  <span class="text-sm op-50 [&>a>i]:lg:hover:text-1em">
    Powered by
    <a
      href="https://astro.build"
      target="_blank"
      style="color:inherit"
    >Astro<i class="text-0 transition-font-size duration-400"> {Astro.generator.slice(6)}</i></a>
    &
    <a
      href="https://github.com/byronogis/astro-friday"
      target="_blank"
      style="color:inherit"
    >Friday<i class="text-0 transition-font-size duration-400"> {`v${pkg.version}`}</i></a>
  </span>
</footer>

<style>
  :root:has(.no-copyright) .copyright {
    display: none;
  }
</style>
