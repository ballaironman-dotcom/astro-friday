{
  "name": "astro-blog-template",
  "type": "module",
  "version": "1.0.0-alpha.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "dev": "pnpm -F docs dev",
    "build": "pnpm -F docs build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp -r",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@unocss/eslint-plugin": "catalog:lint",
    "astro": "catalog:build",
    "bumpp": "catalog:lint",
    "eslint": "catalog:lint",
    "eslint-plugin-astro": "catalog:lint",
    "husky": "catalog:lint",
    "jiti": "catalog:deps",
    "lint-staged": "catalog:lint",
    "prettier-plugin-astro": "catalog:lint",
    "simple-git-hooks": "catalog:lint",
    "zx": "catalog:deps"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
